@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

@using System.Web.Optimization

<!DOCTYPE html>
<html>
<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img id="image_slides" src="~/Assets/image1.jpg" alt="Image">
            </div>

            <div class="item">
                <img id="image_slides" src="~/Assets/image2.jpg" alt="Image">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container text-center">
        <h3>Top Apps</h3><br>
        <div class="row">
            <div class="col-sm-4">
                <div style="display:table-cell; vertical-align:middle; text-align:center">
                    <img id="top_images" src="~/Assets/top1.jpg" class="img-responsive" alt="Image" class="rounded">
                    <p>Learn Chinese</p>
                </div>
            </div>
            <div class="col-xs-4">
                <div style="display:table-cell; vertical-align:middle; text-align:center">
                    <img id="top_images" src="~/Assets/top2.png" class="img-responsive" alt="Image">
                    <p>Learn HTML</p>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                    <strong>Top!</strong>Learn Python
                </div>
                <div class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                    <strong>Useful!</strong>Develop your first game in Unity3D
                </div>
            </div>
        </div>
    </div></br>
